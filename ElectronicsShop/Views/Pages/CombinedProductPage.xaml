<Page x:Class="ElectronicsShop.Views.Pages.CombinedProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ElectronicsShop.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CombinedProductPage">
    <Grid>
        <TabControl FontSize="14" FontFamily="Arial">

            <TabItem Header="Товары" >
                <Frame Content="{Binding ProductPage}" NavigationUIVisibility="Hidden"/>
            </TabItem>
            <TabItem Header="Типы" >
                <Frame Content="{Binding TypePage}" NavigationUIVisibility="Hidden"/>
            </TabItem>
            <TabItem Header="Производители">
                <Frame Content="{Binding ManufacturerPage}" NavigationUIVisibility="Hidden"/>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
