<Page x:Class="ElectronicsShop.Views.Pages.ManufacturerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ElectronicsShop.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ManufacturerPage">

    <Page.Resources>
        <Style TargetType="DataGridCell" x:Key="Cell">
            <Style.Setters>
                <Setter Property="TextBlock.TextAlignment" Value="Center" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="FontFamily" Value="Arial" />
            </Style.Setters>
        </Style>
        <Style TargetType="{x:Type TextBlock}" x:Key="TitleTextBlock">
            <Style.Setters>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="FontSize" Value="24"/>
                <Setter Property="Foreground" Value="White"/>
            </Style.Setters>
        </Style>
        <Style TargetType="{x:Type Button}" x:Key="Button">
            <Style.Setters>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border Padding="2" BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                    Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>

                    </Setter.Value>
                </Setter>
                <Setter Property="FontFamily" Value="Arial"/>
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="Margin" Value="25,15"/>
                <Setter Property="Background" Value="#FF5D2BB2"/>
                <Setter Property="Foreground" Value="#FFC2C2C2"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="BorderBrush" Value="#FF5D2BB2"/>
            </Style.Setters>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="White"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
            <Style.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="4" />
                </Style>
            </Style.Resources>
        </Style>
        <Style TargetType="{x:Type TextBlock}" x:Key="TextBlockSearch">
            <Style.Setters>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Foreground" Value="#FFC2C2C2"/>
                <Setter Property="FontFamily" Value="Arial"/>
            </Style.Setters>
        </Style>
        <Style TargetType="{x:Type TextBox}" x:Key="TextBoxSearch">
            <Style.Setters>
                <Setter Property="TextAlignment" Value="Center"/>
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="Foreground" Value="Black"/>
                <Setter Property="FontFamily" Value="Arial"/>
                <Setter Property="Margin" Value="25,5"/>
                <Setter Property="Padding" Value="8,2"/>
            </Style.Setters>
            <Style.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="4" />
                </Style>
            </Style.Resources>
        </Style>

    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80*"/>
            <ColumnDefinition Width="20*"/>
        </Grid.ColumnDefinitions>


        <Grid Grid.Column="0">
            <DataGrid CanUserAddRows="False" x:Name="ManufacturerDataGrid" ItemsSource="{Binding ManufacturerDataTable.DefaultView}" AutoGenerateColumns="False">
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
                        <Setter Property="Padding" Value="5 0"></Setter>
                        <Setter Property="FontSize" Value="18"></Setter>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn CellStyle="{StaticResource Cell}" Width="70" Header="Id" Binding="{Binding ManufacturerId}" IsReadOnly="True"/>
                    <DataGridTextColumn CellStyle="{StaticResource Cell}" Width="20*" Header="Название" Binding="{Binding Name}" />
                    <DataGridTextColumn CellStyle="{StaticResource Cell}" Width="20*" Header="Страна" Binding="{Binding Country}" />
                    <DataGridTextColumn CellStyle="{StaticResource Cell}" Width="20*" Header="№ Телефона" Binding="{Binding PhoneNumber}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>


        <Grid Grid.Column="1" Background="#2d2d2f" MinWidth="160">
            <Grid.RowDefinitions>
                <RowDefinition Height="15*"/>
                <RowDefinition Height="15*"/>
                <RowDefinition Height="15*"/>
                <RowDefinition Height="60*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <TextBlock Text="Производители" Style="{StaticResource TitleTextBlock}"/>
            </Grid>

            <Grid Grid.Row="1">
                <Button Content="Добавить" Click="Button_Click" Style="{StaticResource Button}"/>
            </Grid>

            <Grid Grid.Row="2">
            </Grid>

            <Grid Grid.Row="3" >
                <StackPanel Margin="0,40">
                    <TextBlock Text="Название" Style="{StaticResource TextBlockSearch}"/>
                    <TextBox Text="{Binding NameSearch}" Style="{StaticResource TextBoxSearch}"/>
                    <TextBlock Text="Страна" Style="{StaticResource TextBlockSearch}"/>
                    <TextBox Text="{Binding CountrySearch}" Style="{StaticResource TextBoxSearch}"/>
                    <Button Content="Найти" Margin="0,10" Width="100" Click="ButtonSearch_Click" Style="{StaticResource Button}"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>
